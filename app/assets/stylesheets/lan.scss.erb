@font-face{
	font-family:"marguerite";
	src: url(<%= asset_path("marguerite.ttf")%>) format('truetype');
}

@font-face{
	font-family:"KGLifeisMessy";
	src: url(<%= asset_path("KGLifeisMessy.ttf")%>) format('truetype');
	font-weight: bold;
}

@font-face{
	font-family:"Thing Press";
	src: url(<%= asset_path("ThingPress.ttf")%>) format('truetype');
	font-weight: lighter;
}

.marguerite{
	font-family:"marguerite";
}

.circle{
	border-radius: 50%;
	display: inline-block;
	padding-top: 10px;
	height: 70px;
	width: 80px;
}

.landing-form{
	border: none;
	outline: none;
	border-bottom: solid 1px #E43D7A;
	font-size: 1.5em;
	color: #C8376C;
}

::-webkit-input-placeholder{/*webkit browser*/
	color: #E43D7A;
	opacity: 0.7;	
}

:-moz-placeholder{/*mozilla 4 a 18*/
	color: #E43D7A;
	opacity: 0.7;	
}

::-moz-placeholder{/*mozilla supoerior al 18*/
	color: #E43D7A;
	opacity: 0.7;	
}

:-ms-input-placeholder{/*internet explorer 10*/
	color: #E43D7A;
	opacity: 0.7;
}






